@keyframes teaser-entrance
  0%
    transform translateX(80px) scale(2)

  100%
    transform translateX(80px) scale(1)

.categoriesContainer
  background white
  position absolute
  flexbox(flex)
  align-items(center)
  height 100vh
  width 100%

  .menu
    position relative
    z-index 1
    margin-left (100%/12)*2
    mix-blend-mode exclusion

    .categories
      flexbox(flex)
      flex-direction(column)

      .category
        padding size-calc(1) 0

        h1
          text-transform capitalize

          &:hover

            a
              text-decoration line-through

            .count
              opacity 1

          a
            color white
            text-decoration none
            font-weight bold
            background none
            border 0
            cursor pointer
            font inherit
            line-height normal
            overflow visible
            padding 0
            -webkit-user-select none
            text-transform capitalize

            &:focus
              outline 0

          .count
            font-size rem-calc(16)
            margin 0 0 0 size-calc(1)
            opacity 0

  .teaser
    background-color black
    width (100%/12)*9
    will-change transform
    animation teaser-entrance 800ms easing
    transition transform 800ms easing
    transform translateX(100%/12)
    position fixed
    top 0
    right 0
    bottom 0
    z-index 0

    &.grow
      transform translateX(0)
      transition transform 600ms $easing
